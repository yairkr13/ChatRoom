<%- include('partials/header') %>
<%- include('partials/navigator') %>

<div class="container-fluid p-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4">
                <h2 class="text-center mb-4">Choose a Password</h2>

                <!-- הודעת שגיאה שתופיע בתוך הטופס אם יש שגיאה -->
                <div id="password-error" class="alert alert-danger text-center d-none">
                    Passwords must be at least 4 characters long and match.
                </div>

                <form id="password-form" action="/users/set-password" method="post" novalidate>
                    <input type="hidden" name="email" value="<%= email %>">

                    <div class="mb-3">
                        <label for="password" class="form-label">Password:</label>
                        <input type="password" class="form-control" id="password" name="password" required minlength="4" maxlength="20">
                    </div>

                    <div class="mb-3">
                        <label for="confirmPassword" class="form-label">Confirm Password:</label>
                        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required minlength="4" maxlength="20">
                        <div class="invalid-feedback">Passwords do not match.</div> <!-- תומך ב-Bootstrap -->
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Set Password</button>
                    </div>
                </form>

                <!-- כפתור חזרה -->
                <div class="mt-3 text-center">
                    <a href="/register" class="btn btn-secondary">Back to Register</a>
                </div>

            </div>
        </div>
    </div>
</div>

<!-- טעינת קובץ ה-JavaScript -->
<script src="/javascripts/setPassword.js"></script>

<%- include('partials/footer') %>
