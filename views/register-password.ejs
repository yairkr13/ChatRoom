<!DOCTYPE html>
<html>
<%- include('partials/head') %>
<body>
<%- include('partials/navbar') %>
<main class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow">
        <div class="card-header bg-success text-white">
          <h2 class="text-center mb-0">Set Your Password</h2>
        </div>
        <div class="card-body">
          <div class="alert alert-info">
            <p class="mb-0"><strong>User: </strong> <%= firstName %> <%= lastName %></p>
            <p class="mb-0"><strong>Email: </strong> <%= email %></p>
          </div>

          <% if (error) { %>
            <div class="alert alert-danger" role="alert">
              <%= error %>
            </div>
          <% } %>

          <form action="/register/password" method="POST" id="passwordForm">
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input type="password" class="form-control" id="password" name="password" minlength="3" maxlength="32" >
              <div class="text-danger small" id="passwordError"></div>
            </div>

            <div class="mb-3">
              <label for="confirmPassword" class="form-label">Confirm Password</label>
              <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" minlength="3" maxlength="32" >
              <div class="text-danger small" id="confirmPasswordError"></div>
            </div>

            <div class="d-grid gap-2 mb-3">
              <button type="submit" class="btn btn-success">Register</button>
            </div>
          </form>

          <form action="/register/back" method="POST">
            <div class="d-grid gap-2">
              <button type="submit" class="btn btn-outline-secondary">Back</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</main>
<%- include('partials/footer') %>
<script src="/js/validation.js"></script>
</body>
</html>
